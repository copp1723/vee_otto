# vAuto Automation Configuration

# Dealership Settings
DEALERSHIP_ID=dealer1
DEALERSHIP_NAME="Example Dealership"
DEALERSHIP_TIMEZONE=America/New_York
DEALERSHIP_ENABLED=true

# vAuto Credentials
VAUTO_USERNAME=your-username
VAUTO_PASSWORD=your-password

# Report Recipients (comma-separated)
REPORT_EMAILS=reports@example.com,manager@example.com

# Schedule (cron format)
# Default: 7am and 2pm daily
CRON_SCHEDULE="0 7,14 * * *"

# Mailgun Configuration
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=mg.yourdomain.com
MAILGUN_FROM_EMAIL=automation@yourdomain.com
MAILGUN_FROM_NAME="vAuto Automation"

# Runtime Settings
HEADLESS=false
TEST_MODE=false

# 2FA Email Configuration (if using email service instead of Mailgun for 2FA)
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_HOST=imap.gmail.com
EMAIL_PORT=993
