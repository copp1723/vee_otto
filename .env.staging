# STAGING ENVIRONMENT CONFIGURATION
# Copy this to .env and fill in actual values

# ==============================================
# SECURITY SETTINGS (CHANGE THESE IMMEDIATELY)
# ==============================================
JWT_SECRET=GENERATE_SECURE_32_CHAR_SECRET_HERE
ADMIN_USER=admin
ADMIN_PASS=GENERATE_SECURE_PASSWORD_HERE

# ==============================================
# PLATFORM CREDENTIALS (USE ENVIRONMENT SECRETS)
# ==============================================
PLATFORM_URL=https://signin.coxautoinc.com
PLATFORM_USERNAME=${VAUTO_USERNAME}
PLATFORM_PASSWORD=${VAUTO_PASSWORD}

# ==============================================
# STAGING ENVIRONMENT SETTINGS
# ==============================================
NODE_ENV=staging
HEADLESS=true
BROWSER_TIMEOUT=30000
DEFAULT_RETRIES=3
LOG_LEVEL=warn

# ==============================================
# ENHANCED FEATURES
# ==============================================
SMART_INTERACTION_ENABLED=true
OCR_ENABLED=true
PERFORMANCE_MONITORING=true
SCREENSHOT_ON_FAILURE=true

# ==============================================
# SELECTORS (VERIFIED FOR PRODUCTION)
# ==============================================
USERNAME_SELECTOR=//input[@id="username"]
PASSWORD_SELECTOR=//input[@id="password"]
SUBMIT_SELECTOR=//button[@type="submit"]
SUCCESS_INDICATOR=//div[contains(@class, "dashboard")]

# ==============================================
# 2FA CONFIGURATION
# ==============================================
ENABLE_2FA=true
TFA_EMAIL_SELECTOR=//button[contains(text(), "Email")]
TFA_CODE_SELECTOR=//input[@name="code"]
TFA_SUBMIT_SELECTOR=//button[contains(text(), "Verify")]
TFA_SUCCESS_INDICATOR=//div[contains(@class, "authenticated")]

# ==============================================
# TARGET AUTOMATION
# ==============================================
TARGET_URL=https://app.vauto.com/inventory
DATA_SELECTOR=//div[@class="inventory-count"]

# ==============================================
# MAILGUN CONFIGURATION (REQUIRED FOR 2FA)
# ==============================================
MAILGUN_API_KEY=${MAILGUN_API_KEY}
MAILGUN_DOMAIN=${MAILGUN_DOMAIN}

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=${SMTP_USER}
SMTP_PASS=${SMTP_PASS}
SMTP_FROM=${SMTP_FROM}
REPORTS_NOTIFICATION_EMAIL=${NOTIFICATION_EMAIL}

# ==============================================
# WEBHOOK CONFIGURATION
# ==============================================
WEBHOOK_URL=${STAGING_WEBHOOK_URL}
WEBHOOK_PORT=3001

# ==============================================
# TWILIO SMS 2FA (USE ENVIRONMENT SECRETS)
# ==============================================
TWILIO_ACCOUNT_SID=${TWILIO_ACCOUNT_SID}
TWILIO_AUTH_TOKEN=${TWILIO_AUTH_TOKEN}
TWILIO_PHONE_NUMBER=${TWILIO_PHONE_NUMBER}
PUBLIC_URL=${STAGING_PUBLIC_URL}

# ==============================================
# 2FA METHOD
# ==============================================
TWO_FACTOR_METHOD=sms
TWO_FACTOR_PHONE=${TWO_FACTOR_PHONE}

# ==============================================
# OPENROUTER CONFIGURATION
# ==============================================
OPENROUTER_API_KEY=${OPENROUTER_API_KEY}
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_DEFAULT_MODEL=anthropic/claude-3.5-sonnet

# ==============================================
# DASHBOARD INTEGRATION
# ==============================================
DASHBOARD_INTEGRATION=true
DASHBOARD_URL=${STAGING_DASHBOARD_URL}
DEALERSHIP_NAME=${DEALERSHIP_NAME}

# ==============================================
# DASHBOARD SERVER CONFIGURATION
# ==============================================
PORT=3000
DASHBOARD_PORT=8080

# ==============================================
# DASHBOARD FRONTEND URLS (STAGING)
# ==============================================
FRONTEND_URL=${STAGING_FRONTEND_URL}
REACT_APP_API_URL=${STAGING_API_URL}
REACT_APP_WS_URL=${STAGING_WS_URL}

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=warn
LOG_FILE=./logs/agent.log

# ==============================================
# DOWNLOAD SETTINGS
# ==============================================
DOWNLOAD_DIR=./downloads
SCREENSHOT_DIR=./screenshots