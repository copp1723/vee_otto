{
  "mcpServers": 
    "filesystem": 
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/joshcopp/Desktop"
      ],
      "env": {
        "MCP_FILESYSTEM_ALLOWED_DIRS": "/Users/joshcopp/Desktop:/Users/joshcopp/Documents:/tmp:/var/tmp",
        "MCP_FILESYSTEM_RECURSIVE": "true",
        "MCP_FILESYSTEM_ALLOW_WRITE": "true",
        "MCP_FILESYSTEM_ALLOW_DELETE": "true",
        "MCP_FILESYSTEM_ALLOW_CREATE": "true",
        "MCP_FILESYSTEM_FOLLOW_SYMLINKS": "true"
      },
      "description": "Full Desktop directory access for multi-project collaboration with enhanced permissions",
      "enabled": true
    }