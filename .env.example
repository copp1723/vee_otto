# Platform Configuration
PLATFORM_URL=https://app.vauto.com/login
PLATFORM_USERNAME=your_username
PLATFORM_PASSWORD=your_password

# Browser Configuration
HEADLESS=false

# Selectors (override defaults)
USERNAME_SELECTOR=//input[@id="username"]
PASSWORD_SELECTOR=//input[@id="password"]
SUBMIT_SELECTOR=//button[@type="submit"]
SUCCESS_INDICATOR=//div[contains(@class, "dashboard")]

# 2FA Configuration
ENABLE_2FA=true
TFA_EMAIL_SELECTOR=//button[contains(text(), "Email")]
TFA_CODE_SELECTOR=//input[@name="code"]
TFA_SUBMIT_SELECTOR=//button[contains(text(), "Verify")]
TFA_SUCCESS_INDICATOR=//div[contains(@class, "authenticated")]

# Target automation
TARGET_URL=https://app.vauto.com/inventory
DATA_SELECTOR=//div[@class="inventory-count"]

# Mailgun Configuration (for 2FA)
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=your_domain.com

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=automation@yourdomain.com
REPORTS_NOTIFICATION_EMAIL=notifications@yourdomain.com

# Webhook Configuration (optional)
WEBHOOK_URL=https://your-webhook-endpoint.com/webhook
WEBHOOK_PORT=3000

# OpenRouter Configuration (optional)
OPENROUTER_API_KEY=sk-or-v1-your_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_DEFAULT_MODEL=anthropic/claude-3.5-sonnet

# Dashboard Integration
DASHBOARD_INTEGRATION=false
DASHBOARD_URL=http://localhost:3000
DEALERSHIP_NAME=Your Dealership Name

# Dashboard Server Configuration
PORT=3000
JWT_SECRET=your-secure-jwt-secret-change-in-production
ADMIN_USER=admin
ADMIN_PASS=secure-password-change-in-production

# Dashboard Frontend URLs
FRONTEND_URL=http://localhost:8080
REACT_APP_API_URL=http://localhost:3000/api
REACT_APP_WS_URL=http://localhost:3000
DASHBOARD_PORT=8080

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/agent.log

# Download Settings
DOWNLOAD_DIR=./downloads
SCREENSHOT_DIR=./screenshots